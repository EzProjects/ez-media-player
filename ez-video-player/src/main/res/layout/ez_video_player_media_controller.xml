<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/video_controller_bottom"
        layout="@layout/ez_video_controller_bottom" />

    <ImageView
        android:id="@+id/player_lock_screen"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="24dp"
        android:src="@drawable/ico_ez_video_player_unlock"
        android:visibility="gone" />

    <com.xulaoyao.ez_video_player.view.EzVideoPlayerErrorView
        android:id="@+id/video_controller_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include
        android:id="@+id/video_controller_title"
        layout="@layout/ez_video_player_controller_title" />

    <ImageButton
        android:id="@+id/video_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignTop="@id/video_controller_title"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/ez_video_player_oval_white_stroke"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ico_ez_video_player_back_white" />

</RelativeLayout>