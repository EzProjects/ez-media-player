<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/ez_video_player_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.xulaoyao.ez_video_player.view.EzVideoPlayerControllerView
        android:id="@+id/ez_video_player_controller"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include
        android:id="@+id/ez_video_player_loading"
        layout="@layout/ez_video_player_controller_loading" />

    <com.xulaoyao.ez_video_player.view.EzVideoPlayerSystemOverlay
        android:id="@+id/ez_video_player_system_overlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <com.xulaoyao.ez_video_player.view.EzVideoPlayerProgressOverlay
        android:id="@+id/ez_video_player_progress_overlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>